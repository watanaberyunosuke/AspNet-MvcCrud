@model IEnumerable<MvcCrud.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@* This ViewBag is for the successful deletion of a user from DeleteConfirmed *@
@if (ViewBag.Info != null)
{
    <div class="alert alert-success">@ViewBag.Info</div>
}

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary"})
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoginName)
            </th>
            <th></th>
        </tr>
        
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoginName)
                </td>
                <td>
                    <div class="pull-right">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-inTable" })
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-inTable" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-default btn-inTable" })
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
